<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".resultActivity"
    android:background="#085980">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textAlignment="center"
            android:fontFamily="@font/bowlby_one_sc"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginTop="15dp"
        android:text="RESULTS"
        android:textSize="30sp"
        android:fontFamily="@font/bowlby_one_sc"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_res"
        android:layout_marginTop="25dp"
        android:text="NAME:"
        android:textSize="25sp"
        android:fontFamily="@font/bowlby_one_sc"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tv_r_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:fontFamily="@font/bowlby_one_sc"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/txt_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_r_name"
        android:layout_marginTop="20dp"
        android:text="AGE:"
        android:textSize="25sp"
        android:fontFamily="@font/bowlby_one_sc"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tv_r_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_age"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/bowlby_one_sc"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_r_age"
        android:layout_marginTop="20dp"
        android:text="HIGH SCORE:"
        android:textSize="25sp"
        android:fontFamily="@font/bowlby_one_sc"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tv_r_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_score"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/bowlby_one_sc"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_r_score"
        android:background="@color/red"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:text="BACK"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/bowlby_one_sc"/>

    <TextView
        android:id="@+id/txt_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u00a9CODE QUIZ"
        android:textColor="@android:color/white"
        android:layout_below="@id/btn_back"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/bowlby_one_sc"/>

</RelativeLayout>